@model Tipo_Datos.Models.Entidades.ClientesModel
@{

    ViewData["Title"] = "Edición de Cliente";
    // crear clientes el fondo es azul y el texto en blanco
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<h4>Edición del Cliente Api</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" action="#">
            <div class="form-group">
                <label class="control-label">Nombres:</label>
                <input id="nombres" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Email:</label>
                <input id="email" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Teléfono:</label>
                <input id="telefono" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Dirección:</label>
                <input id="direccion" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Cedula/Ruc:</label>
                <input id="cedula_RUC" class="form-control" />
            </div>
            <input type="hidden" id="id" />
            <input type="hidden" id="create_At" />
            <input type="hidden" id="update_At" />
            <input type="hidden" id="isDeleted" />
            <div class="form-group">
                <a id="btnEditar" class="btn btn-success" >Editar</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a la lista</a>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            var url = window.location.pathname;
            var id = url.substring(url.lastIndexOf('/') + 1);
            Cargar_Cliente_Edicion(id);
        });

    </script>
}
