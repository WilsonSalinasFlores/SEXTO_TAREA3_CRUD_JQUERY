@model Tipo_Datos.Models.Entidades.ClientesModel
@{

    ViewData["Title"] = "Lista de clientes";
    // crear clientes el fondo es azul y el texto en blanco
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="container">
    <main role="main" class="pb-3">
        <h1>Lista de Clientes Api</h1>
        <div class="mb-3">
            <a class="btn btn-success" href="/ClienteQuery/Nuevo">Crear Nuevo Cliente Api</a>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>Nombre Cliente</th>
                        <th>Email</th>
                        <th>Cédula/RUC</th>
                        <th>Teléfono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="clientes-tbody">
                    <!-- Los clientes se cargarán aquí dinámicamente -->
                </tbody>
            </table>
        </div>
    </main>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            Listar_Clientes();
        });
    </script>
}